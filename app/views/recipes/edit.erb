<h1>Update Recipe:</h1>

<form action="/recipes/<%= @recipe.id %>" method="POST">
    <input type="hidden" name="_method" value="patch">
    <label for="title">Title:</label><br>
    <input type="text" name="title" value="<%= @recipe.title %>"><br><br>
    <label for="image_url">Image URL:</label><br>
    <input type="text" name="image_url" value="<%= @recipe.image_url %>"><br><br>
    <label for="ingredients">Ingredients:</label><br>
    <textarea name="ingredients" style="width:550px; height:150px;"><%= @recipe.ingredients %></textarea><br><br>
    <label for="instructions">Instructions:</label><br>
    <textarea name="instructions" style="width:550px; height:200px;"><%= @recipe.instructions %></textarea><br>
    <input type="submit" value="Update">
</form>


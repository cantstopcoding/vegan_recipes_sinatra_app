<h2><%= @recipe.title %></h2>
<img src="<%= @recipe.image_url %>" alt="<%= @recipe.title %> pic" height="200" width="200"><br>
<strong><%= @recipe.created_at %></strong>
<h3>Ingredients:</h3>
<p><%= @recipe.ingredients %></p>
<h3>Instructions:</h3>
<p><%= @recipe.instructions %></p>
<p>Chef Name: <%= @recipe.user.name %></p>

<a href="/recipes/<%= @recipe.id %>/edit">Update Recipe</a>

<form action="/recipes/<%= @recipe.id %>" method="POST">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Recipe">
</form>




